---
export interface Props {
  id?: string;
  name?: string;
  class?: string;
  disabled?: boolean;
}
const { id, name, class: className="", disabled=false } = Astro.props;
---
<select
  id={id}
  name={name}
  disabled={disabled}
  class={`h-10 w-full rounded-md border border-input bg-background px-3 text-sm text-foreground shadow-sm focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 ring-offset-background disabled:opacity-50 ${className}`}
>
  <slot />
</select>
