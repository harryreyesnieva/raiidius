---
import type { Edition } from "../../content/types";
import Card from "../ui/Card.astro";

export interface Props { edition: Edition; }
const { edition } = Astro.props;
const partners = edition.partners ?? [];
---
<section class="border-b border-border px-4 py-16 lg:px-6">
  <div class="mx-auto max-w-7xl">
    <div class="flex flex-col items-center gap-3 text-center">
      <h2 class="text-2xl font-bold text-foreground">Partners & Sponsor</h2>
      <p class="max-w-2xl text-sm text-muted-foreground">
        Hosted at {edition.hostCampus}. Partnered with key campus initiatives and supported by our sponsor.
      </p>
    </div>

    <div class="mt-10 grid gap-4 md:grid-cols-3">
      {partners.map((p) => (
        <Card class="h-full">
          <div class="p-6">
            <div class="text-base font-semibold text-foreground">{p.name}</div>
            <p class="mt-2 text-sm text-muted-foreground">{p.description}</p>
          </div>
        </Card>
      ))}
    </div>

    <div class="mt-10 rounded-lg border border-border bg-card p-6 text-center">
      <div class="text-sm font-semibold text-foreground">Sponsor acknowledgement</div>
      <p class="mt-2 text-sm text-muted-foreground">
        Supported by <span class="font-medium text-foreground">{edition.sponsorName}</span>.
      </p>
    </div>
  </div>
</section>
