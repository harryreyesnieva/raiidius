---
import type { Edition } from "../../content/types";
import Card from "../ui/Card.astro";
import Icon from "../Icon.astro";

export interface Props { edition: Edition; }
const { edition } = Astro.props;
const dates = edition.importantDates ?? [];
---
<section class="border-b border-border px-4 py-16 lg:px-6">
  <div class="mx-auto max-w-7xl">
    <div class="flex flex-col items-center gap-3 text-center">
      <h2 class="text-2xl font-bold text-foreground">Important Dates</h2>
      <p class="max-w-2xl text-sm text-muted-foreground">
        Key milestones for registration and abstract/poster submissions.
      </p>
    </div>

    <div class="mt-10 grid gap-4 md:grid-cols-2 lg:grid-cols-3">
      <Card class="h-full">
        <div class="p-6">
          <div class="flex items-start gap-3">
            <span class="inline-flex h-10 w-10 items-center justify-center rounded-lg bg-primary/10 text-primary">
              <Icon name="CalendarDays" class="h-5 w-5" />
            </span>
            <div>
              <div class="text-sm font-semibold text-foreground">Symposium Date</div>
              <div class="mt-1 text-sm text-muted-foreground">{edition.date || "TBD"}</div>
            </div>
          </div>
        </div>
      </Card>

      {dates.map((d) => (
        <Card class="h-full">
          <div class="p-6">
            <div class="text-sm font-semibold text-foreground">{d.label}</div>
            <div class="mt-1 text-sm text-muted-foreground">{d.date}</div>
          </div>
        </Card>
      ))}
    </div>
  </div>
</section>
