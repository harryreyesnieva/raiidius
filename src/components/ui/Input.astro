---
export interface Props {
  id?: string;
  name?: string;
  type?: string;
  value?: string;
  placeholder?: string;
  class?: string;
  autocomplete?: string;
}
const { id, name, type="text", value, placeholder, class: className="", autocomplete } = Astro.props;
---
<input
  id={id}
  name={name}
  type={type}
  value={value}
  placeholder={placeholder}
  autocomplete={autocomplete}
  class={`flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm text-foreground shadow-sm transition-colors placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 ring-offset-background ${className}`}
/>
