---
import Card from "../ui/Card.astro";
import Input from "../ui/Input.astro";
import Button from "../ui/Button.astro";
import Icon from "../Icon.astro";
---
<section class="px-4 py-16 lg:px-6">
  <div class="mx-auto max-w-7xl">
    <Card class="overflow-hidden">
      <div class="grid gap-0 lg:grid-cols-2">
        <div class="p-8">
          <h2 class="text-2xl font-bold text-foreground">Join the mailing list</h2>
          <p class="mt-2 text-sm text-muted-foreground">
            Get updates on future editions, deadlines, and calls for abstracts/posters.
          </p>

          <form class="mt-6 flex flex-col gap-3 sm:flex-row" onsubmit="return false;">
            <div class="flex-1">
              <Input type="email" placeholder="Email address" autocomplete="email" />
            </div>
            <Button type="submit" variant="primary">
              Subscribe
              <Icon name="ArrowRight" class="h-4 w-4" />
            </Button>
          </form>

          <p class="mt-3 text-xs text-muted-foreground">
            Placeholder UI only. Connect to your mailing list provider when ready.
          </p>
        </div>
        <div class="hidden items-center justify-center bg-primary/5 p-8 lg:flex">
          <div class="max-w-xs text-center">
            <div class="mx-auto inline-flex h-12 w-12 items-center justify-center rounded-xl bg-primary/10 text-primary">
              <Icon name="Mail" class="h-6 w-6" />
            </div>
            <p class="mt-4 text-sm text-muted-foreground">
              Responsible AI, implementation, and equityâ€”delivered to your inbox.
            </p>
          </div>
        </div>
      </div>
    </Card>
  </div>
</section>
