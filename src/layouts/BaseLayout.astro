---
import "../styles/globals.css";
import { siteConfig, getEdition } from "../content/siteConfig";
import SiteHeader from "../components/SiteHeader.astro";
import SiteFooter from "../components/SiteFooter.astro";

export interface Props {
  title: string;
  description?: string;
  year: number;
}

const { title, description, year } = Astro.props;
const edition = getEdition(year) ?? siteConfig.editions[0];
const metaDescription = description ?? siteConfig.seriesDescription;

const ogTitle = `${title} | ${siteConfig.seriesAcronym}`;
const ogDescription = metaDescription;
const ogImage = `${import.meta.env.BASE_URL}placeholder.svg`;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={metaDescription} />
    <title>{ogTitle}</title>

    <meta property="og:title" content={ogTitle} />
    <meta property="og:description" content={ogDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={ogImage} />

    <meta name="twitter:card" content="summary_large_image" />

    <link rel="icon" href={`${import.meta.env.BASE_URL}placeholder-logo.svg`} />
  </head>
  <body>
    <a href="#main" class="sr-only focus:not-sr-only focus:fixed focus:left-4 focus:top-4 focus:z-50 focus:rounded-md focus:bg-background focus:px-4 focus:py-2 focus:text-sm focus:shadow">
      Skip to content
    </a>

    <SiteHeader year={year} pathname={Astro.url.pathname} />

    <main id="main">
      <slot />
    </main>

    <SiteFooter year={year} />
  </body>
</html>
