---
import Button from "../ui/Button.astro";
import Badge from "../ui/Badge.astro";
import Icon from "../Icon.astro";
import type { Edition } from "../../content/types";

export interface Props { year: number; edition: Edition; }
const { year, edition } = Astro.props;

const blocks = [
  {
    period: "Morning",
    time: "8:00 AM – 10:30 AM",
    items: ["Registration & Breakfast", "Welcome & Opening Remarks", "Keynote 1 & 2", "Coffee break"],
  },
  {
    period: "Midday",
    time: "10:30 AM – 1:45 PM",
    items: ["Concurrent breakouts", "Panel discussion", "Lunch + Poster Session (Lunch)"],
  },
  {
    period: "Afternoon",
    time: "1:45 PM – 5:15 PM",
    items: ["Poster Session (Afternoon)", "Session: Patient engagement tools", "Roundtable", "Closing remarks"],
  },
  {
    period: "Reception",
    time: "5:15 PM – 6:15 PM",
    items: ["Networking reception"],
  },
];
---
<section class="border-b border-border bg-card px-4 py-16 lg:px-6">
  <div class="mx-auto max-w-7xl">
    <div class="flex flex-col items-center gap-3 text-center">
      <h2 class="text-2xl font-bold text-foreground">Program at a glance</h2>
      <p class="max-w-2xl text-sm text-muted-foreground">A snapshot of the day’s activities.</p>
    </div>

    <div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
      {blocks.map((b) => (
        <div class="rounded-lg border border-border bg-background p-5">
          <div class="mb-3 flex items-center justify-between">
            <Badge variant="secondary" class="font-semibold">{b.period}</Badge>
          </div>
          <p class="mb-3 text-xs text-muted-foreground">{b.time}</p>
          <ul class="grid gap-2 text-sm text-muted-foreground">
            {b.items.map((i) => <li class="flex gap-2"><span class="mt-1 h-1.5 w-1.5 rounded-full bg-primary/50"></span><span>{i}</span></li>)}
          </ul>
        </div>
      ))}
    </div>

    <div class="mt-10 flex justify-center">
      <Button href={`${import.meta.env.BASE_URL}${year}/program/`} variant="outline">
        View full program
        <Icon name="ArrowRight" class="h-4 w-4" />
      </Button>
    </div>
  </div>
</section>
