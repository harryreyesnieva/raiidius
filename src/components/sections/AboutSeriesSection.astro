---
import { siteConfig } from "../../content/siteConfig";
import type { Edition } from "../../content/types";

export interface Props { edition: Edition; }
const { edition } = Astro.props;
---
<section class="border-b border-border bg-card px-4 py-16 lg:px-6">
  <div class="mx-auto max-w-7xl">
    <div class="grid gap-12 lg:grid-cols-2">
      <div>
        <h2 class="text-2xl font-bold text-foreground">About {siteConfig.seriesAcronym}</h2>
        <p class="mt-3 text-sm leading-relaxed text-muted-foreground">
          {siteConfig.seriesDescription}
        </p>
        <p class="mt-3 text-sm italic text-muted-foreground">
          {siteConfig.seriesAcronym} is an <strong>annual symposium series</strong>. Each year features a different infectious disease domain (e.g., respiratory viruses, antimicrobial resistance, emerging pathogens).
        </p>
      </div>

      <div>
        <h2 class="text-2xl font-bold text-foreground">{edition.year} Edition Focus: {edition.themeShortTitle}</h2>
        <p class="mt-3 text-sm leading-relaxed text-muted-foreground">
          {edition.themeDescription}
        </p>
        <p class="mt-3 text-sm text-muted-foreground">
          <span class="font-medium text-foreground">Short descriptor:</span> Responsible AI and Informatics for the Prevention and Control of STIs.
        </p>
      </div>
    </div>
  </div>
</section>
