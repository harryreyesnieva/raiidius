---
import { siteConfig, getEdition } from "../content/siteConfig";
import Separator from "./ui/Separator.astro";

export interface Props { year: number; }
const { year } = Astro.props;
const edition = getEdition(year) ?? siteConfig.editions[0];
---
<footer class="border-t border-border bg-card px-4 py-12 lg:px-6">
  <div class="mx-auto max-w-7xl">
    <div class="grid gap-10 md:grid-cols-3">
      <div>
        <div class="text-lg font-semibold text-foreground">{siteConfig.seriesAcronym}</div>
        <p class="mt-2 text-sm text-muted-foreground">{siteConfig.seriesFullName}</p>
        <p class="mt-4 text-sm text-muted-foreground">
          Contact: <a class="underline underline-offset-4 hover:text-foreground" href={`mailto:${edition.contactEmail}`}>{edition.contactEmail}</a>
        </p>
      </div>

      <div>
        <div class="text-sm font-semibold text-foreground">Quick links</div>
        <ul class="mt-3 grid gap-2 text-sm text-muted-foreground">
          <li><a class="hover:text-foreground" href={`${import.meta.env.BASE_URL}${year}/program/`}>Program</a></li>
          <li><a class="hover:text-foreground" href={`${import.meta.env.BASE_URL}${year}/speakers/`}>Speakers</a></li>
          <li><a class="hover:text-foreground" href={`${import.meta.env.BASE_URL}${year}/register/`}>Register</a></li>
          <li><a class="hover:text-foreground" href={`${import.meta.env.BASE_URL}${year}/abstracts/`}>Submit an abstract/poster</a></li>
          <li><a class="hover:text-foreground" href={`${import.meta.env.BASE_URL}${year}/code-of-conduct/`}>Code of Conduct</a></li>
        </ul>
      </div>

      <div>
        <div class="text-sm font-semibold text-foreground">Social</div>
        <p class="mt-3 text-sm text-muted-foreground">
          Social links coming soon.
        </p>
      </div>
    </div>

    <Separator class="my-10" />

    <div class="flex flex-col gap-2 text-xs text-muted-foreground md:flex-row md:items-center md:justify-between">
      <div>Â© {new Date().getFullYear()} {siteConfig.seriesAcronym}. All rights reserved.</div>
      <div>Built for GitHub Pages (static).</div>
    </div>
  </div>
</footer>
