---
import type { Edition, WhatToExpect } from "../../content/types";
import Card from "../ui/Card.astro";
import Icon from "../Icon.astro";

export interface Props { edition: Edition; }
const { edition } = Astro.props;
const items = edition.whatToExpect ?? [];
if (!items.length) {
  // render nothing
}
---
{items.length ? (
<section class="border-b border-border px-4 py-16 lg:px-6">
  <div class="mx-auto max-w-7xl">
    <h2 class="text-center text-2xl font-bold text-foreground">What to Expect</h2>
    <p class="mx-auto mt-3 max-w-2xl text-center text-sm text-muted-foreground">
      Keynotes, applied methods, implementation, and a strong trainee showcaseâ€”designed for cross-disciplinary conversation.
    </p>

    <div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {items.map((item) => (
        <Card class="h-full">
          <div class="p-6">
            <div class="flex items-start gap-3">
              <span class="inline-flex h-10 w-10 items-center justify-center rounded-lg bg-primary/10 text-primary">
                <Icon name={item.icon ?? "LayoutGrid"} class="h-5 w-5" />
              </span>
              <div>
                <div class="text-base font-semibold text-foreground">{item.title}</div>
                <p class="mt-1 text-sm text-muted-foreground">{item.description}</p>
              </div>
            </div>
          </div>
        </Card>
      ))}
    </div>
  </div>
</section>
) : null}
