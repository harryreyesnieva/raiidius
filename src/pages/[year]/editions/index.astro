---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import Card from "../../../components/ui/Card.astro";
import Badge from "../../../components/ui/Badge.astro";
import Button from "../../../components/ui/Button.astro";
import Icon from "../../../components/Icon.astro";
import { siteConfig, getEdition } from "../../../content/siteConfig";
import { getEditionYears } from "../../../lib/editions";

export async function getStaticPaths() {
  return getEditionYears().map((year) => ({ params: { year: String(year) } }));
}

const currentYear = Number(Astro.params.year);
const currentEdition = getEdition(currentYear) ?? siteConfig.editions[0];
---
<BaseLayout year={currentYear} title="Editions" description={`Past and future editions of ${siteConfig.seriesAcronym}.`}>
  <section class="border-b border-border px-4 py-12 lg:px-6">
    <div class="mx-auto max-w-7xl">
      <h1 class="text-3xl font-bold text-foreground">Editions</h1>
      <p class="mt-2 text-sm text-muted-foreground">
        {siteConfig.seriesAcronym} is an annual series. Use this page to navigate across editions.
      </p>

      <div class="mt-10 grid gap-4 md:grid-cols-2">
        {siteConfig.editions.map((e) => (
          <Card class="h-full">
            <div class="p-6">
              <div class="flex flex-wrap items-center justify-between gap-3">
                <div>
                  <div class="text-lg font-semibold text-foreground">{siteConfig.seriesAcronym} {e.year}</div>
                  <div class="mt-1 text-sm text-muted-foreground">{e.themeShortTitle}</div>
                </div>
                <div class="flex items-center gap-2">
                  {e.isActive ? <Badge variant="secondary">Active</Badge> : null}
                  {e.isComingSoon ? <Badge variant="outline">Coming soon</Badge> : null}
                </div>
              </div>

              <div class="mt-4 text-sm text-muted-foreground">
                {e.date ? `${e.date} â€¢ ${e.venue}` : "Date and venue TBD"}
              </div>

              <div class="mt-6">
                <Button href={`${import.meta.env.BASE_URL}${e.year}/`} variant={e.year === currentEdition.year ? "secondary" : "outline"}>
                  View {e.year}
                  <Icon name="ArrowRight" class="h-4 w-4" />
                </Button>
              </div>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
